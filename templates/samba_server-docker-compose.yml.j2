samba:
  image: d3vilh/samba-docker
  hostname: samba
  container_name: samba

  volumes:
    - ./smb.conf:/etc/samba/smb.conf
    - ~/samba-server/files:/mnt/files
{% if samba_torrents_share %}
    - ~/qbittorrent/downloads:/mnt/torrents #:ro
{% endif %}

  ports:
    - "137:137/udp"
    - "138:138/udp"
    - "139:139/tcp"
    - "445:445/tcp"

  environment:
    - USERNAME={{ samba_user }}
    - PASSWORD={{ samba_password }}
    # - UID=1000 # Optional to override default UID = 1000
    # - GID=1000 # Optional to override default GID = 1000